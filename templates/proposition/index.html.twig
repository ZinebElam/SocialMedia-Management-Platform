{% extends 'base.html.twig' %}

{% block title %}Proposition index{% endblock %}

{% block body %}

    <div class="container" id="down">
        <div class="row">
            <div class="col-lg-12 col-md-10 mx-auto">
                <h1 class="post-title">Proposition index</h1>
                <table class="table proposition_index" style="font-size: 17px">
                    <thead class="thead-dark">

                    <tr>

                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">File</th>
                        <th scope="col">SubmitDate</th>
                        <th scope="col">SubmitBy</th>
                        <th scope="col">ApprovalDate</th>
                        <th scope="col">PublicationDate</th>
                        <th scope="col">actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for proposition in propositions %}
                        <tr>

                            <td>{{ proposition.title }}</td>
                            <td>{{ proposition.content|raw }}</td>
                            <td><a target="_blank" href="{{ asset('uploads/files/' ~ proposition.file) }}"> <i class="fas fa-file"></i> </a></td>
                            <td>{{ proposition.submitDate ? proposition.submitDate|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                {% if proposition.userSubmit %}
                                    {{ proposition.userSubmit.firstname }}
                                {% else %}
                                    None
                                {% endif %}
                            </td>
                            <td>{{ proposition.approvalDate ? proposition.approvalDate|date('Y-m-d H:i') : '' }}</td>
                            <td>{{ proposition.publicationDate ? proposition.publicationDate|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <a href="{{ path('proposition_show', {'id': proposition.id}) }}"> <i class="fas fa-eye"></i></a>
                                <a href="{{ path('proposition_edit', {'id': proposition.id}) }}"> <i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <button type="submit" class="btn btn-outline-dark">
                    <a href="{{ path('proposition_new') }}" ><span class="btn-label"><i class="fas fa-plus" ></i></span>
                        New</a></button>

            </div>
        </div>
    </div>
{% endblock %}